FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    g++ \
    make \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy source code
COPY . .

# Build server
RUN make clean && make server

# Expose port
EXPOSE 8080

# Run server
CMD ["./bin/server"]
