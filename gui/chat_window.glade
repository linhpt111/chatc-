<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <!-- Main Window -->
  <object class="GtkWindow" id="main_window">
    <property name="title">Chat App - Pub/Sub</property>
    <property name="default-width">650</property>
    <property name="default-height">550</property>
    <property name="border-width">10</property>
    <signal name="destroy" handler="on_window_destroy"/>
    
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="spacing">5</property>
        
        <!-- Status Label -->
        <child>
          <object class="GtkLabel" id="status_label">
            <property name="label">Not connected</property>
            <property name="halign">start</property>
          </object>
        </child>
        
        <!-- Login Box -->
        <child>
          <object class="GtkBox" id="login_box">
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="margin-top">20</property>
            
            <child>
              <object class="GtkGrid" id="login_grid">
                <property name="row-spacing">8</property>
                <property name="column-spacing">10</property>
                <property name="halign">center</property>
                
                <!-- Username -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Username:</property>
                    <property name="halign">end</property>
                  </object>
                  <packing>
                    <property name="left-attach">0</property>
                    <property name="top-attach">0</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkEntry" id="username_entry">
                    <property name="placeholder-text">Enter username</property>
                    <property name="width-chars">25</property>
                  </object>
                  <packing>
                    <property name="left-attach">1</property>
                    <property name="top-attach">0</property>
                  </packing>
                </child>
                
                <!-- Server -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Server:</property>
                    <property name="halign">end</property>
                  </object>
                  <packing>
                    <property name="left-attach">0</property>
                    <property name="top-attach">1</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkEntry" id="server_entry">
                    <property name="text">127.0.0.1</property>
                    <property name="width-chars">25</property>
                  </object>
                  <packing>
                    <property name="left-attach">1</property>
                    <property name="top-attach">1</property>
                  </packing>
                </child>
                
                <!-- Port -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Port:</property>
                    <property name="halign">end</property>
                  </object>
                  <packing>
                    <property name="left-attach">0</property>
                    <property name="top-attach">2</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkEntry" id="port_entry">
                    <property name="text">8080</property>
                    <property name="width-chars">25</property>
                  </object>
                  <packing>
                    <property name="left-attach">1</property>
                    <property name="top-attach">2</property>
                  </packing>
                </child>
                
                <!-- Connect Button -->
                <child>
                  <object class="GtkButton" id="connect_btn">
                    <property name="label">Connect</property>
                    <signal name="clicked" handler="on_connect_clicked"/>
                  </object>
                  <packing>
                    <property name="left-attach">0</property>
                    <property name="top-attach">3</property>
                    <property name="width">2</property>
                  </packing>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Chat Box (hidden initially) -->
        <child>
          <object class="GtkBox" id="chat_box">
            <property name="orientation">vertical</property>
            <property name="spacing">5</property>
            <property name="vexpand">TRUE</property>
            <property name="visible">FALSE</property>
            
            <!-- Chat View -->
            <child>
              <object class="GtkScrolledWindow" id="chat_scroll">
                <property name="vexpand">TRUE</property>
                <property name="min-content-height">300</property>
                <child>
                  <object class="GtkTextView" id="chat_view">
                    <property name="editable">FALSE</property>
                    <property name="wrap-mode">word</property>
                    <property name="cursor-visible">FALSE</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Group Controls -->
            <child>
              <object class="GtkBox" id="group_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">5</property>
                
                <child>
                  <object class="GtkLabel">
                    <property name="label">Group:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="group_entry">
                    <property name="hexpand">TRUE</property>
                    <property name="placeholder-text">Enter group name</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="join_group_btn">
                    <property name="label">Join Group</property>
                    <signal name="clicked" handler="on_join_group_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="leave_group_btn">
                    <property name="label">Leave Group</property>
                    <signal name="clicked" handler="on_leave_group_clicked"/>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Recipient Controls -->
            <child>
              <object class="GtkBox" id="recipient_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">5</property>
                
                <child>
                  <object class="GtkLabel">
                    <property name="label">DM To:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="recipient_entry">
                    <property name="hexpand">TRUE</property>
                    <property name="placeholder-text">Enter username for direct message</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Message Controls -->
            <child>
              <object class="GtkBox" id="message_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">5</property>
                
                <child>
                  <object class="GtkEntry" id="message_entry">
                    <property name="hexpand">TRUE</property>
                    <property name="placeholder-text">Type your message...</property>
                    <signal name="activate" handler="on_send_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="send_btn">
                    <property name="label">Send</property>
                    <signal name="clicked" handler="on_send_clicked"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="send_file_btn">
                    <property name="label">Send File</property>
                    <signal name="clicked" handler="on_send_file_clicked"/>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Disconnect Button -->
            <child>
              <object class="GtkButton" id="disconnect_btn">
                <property name="label">Disconnect</property>
                <signal name="clicked" handler="on_disconnect_clicked"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
